          <!--property:testConnectionOnCheckout="${jdbc.testConnectionOnCheckout}"-->
          <!--property:unreturnedConnectionTimeout="${jdbc.unreturnedConnectionTimeout}"-->
          <!--property:autoCommitOnClose="true"/>-->

    <bean
        id="h2DataSourceBinder"
        class="org.springframework.beans.factory.config.MethodInvokingFactoryBean"
        depends-on="nonXaDataSourceH2"
        property:staticMethod="ikube.discover.tool.JNDI.bind">
        <property name="arguments">
            <array>
                <value>java:comp/env/jdbc/nonXaDataSourceH2</value>
                <ref local="nonXaDataSourceH2" />
            </array>
        </property>
    </bean>

</beans>